<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Calculator"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:hint="Operation"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="Result"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/B2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="2"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/B1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="1"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/B3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="3"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/B4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="4"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <Button
        android:id="@+id/B5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="5"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B4"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <Button
        android:id="@+id/B6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="6"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B5"
        app:layout_constraintTop_toBottomOf="@+id/B3" />

    <Button
        android:id="@+id/B7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="7"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B4" />

    <Button
        android:id="@+id/B8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="8"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B7"
        app:layout_constraintTop_toBottomOf="@+id/B5" />
    <Button
        android:id="@+id/B9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="9"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B8"
        app:layout_constraintTop_toBottomOf="@+id/B6" />

    <Button
        android:id="@+id/Bmultiplcation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="x"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B9"
        app:layout_constraintTop_toBottomOf="@+id/Bminus" />

    <Button
        android:id="@+id/Bplus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="+"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/Bminus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="-"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B6"
        app:layout_constraintTop_toBottomOf="@+id/Bplus" />

    <Button
        android:id="@+id/Bdivision"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="รท"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/Bequal"
        app:layout_constraintTop_toBottomOf="@+id/Bmultiplcation" />

    <Button
        android:id="@+id/AC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="AC"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B7" />

    <Button
        android:id="@+id/B0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="0"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/AC"
        app:layout_constraintTop_toBottomOf="@+id/B8" />
    <Button
        android:id="@+id/Bequal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="="
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@id/B0"
        app:layout_constraintTop_toBottomOf="@+id/B9" />

</androidx.constraintlayout.widget.ConstraintLayout>